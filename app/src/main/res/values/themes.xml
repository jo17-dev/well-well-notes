<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WellWell" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:state_pressed">@color/orange_pressed</item>
    </style>

    <style name="Theme.WellWell" parent="Base.Theme.WellWell" />

    <style name="Theme.WellWell.Fullscreen" parent="Theme.WellWell">
        <item name="android:actionBarStyle">@style/Widget.Theme.WellWell.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.WellWell.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>