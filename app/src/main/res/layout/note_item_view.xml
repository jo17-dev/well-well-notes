<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/cl_note_item_top_container"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cl_note_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flow_verticalGap="10dp"
        android:weightSum="1.12"
        app:layout_constraintEnd_toEndOf="@+id/cl_note_item_top_container"
        app:layout_constraintStart_toStartOf="@+id/cl_note_item_top_container"
        app:layout_constraintTop_toTopOf="@+id/cl_note_item_top_container">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title of the related note"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius"
            android:layout_weight=".1"
            android:layout_marginHorizontal="2dp"
            android:text="Id" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/custom_radius"
            android:text="Del" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>